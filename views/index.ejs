<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Registro de Estacionamiento</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!-- iconos -->
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
</head>
  <body>
    
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">Registro de Estacionamiento</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="#"><i class='bx bxs-home'></i> Inicio</a>
              </li>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class='bx bxs-category-alt'></i> Funciones
                </a>
                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                  <li><a class="dropdown-item" href="#"><i class='bx bx-check-circle'></i> Crear Registro</a></li>
                  <li><a class="dropdown-item" href="#"><i class='bx bx-list-ol'></i> Listar Usuarios</a></li>
                </ul>
              </li>
            </ul>
            <!--<form class="d-flex">
              <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
              <button class="btn btn-outline-success" type="submit">Search</button>
            </form>-->
          </div>
        </div>
      </nav>

      <div class="container">
        <a href="/crear" class="btn btn-outline-primary mt-4"><i class='bx bx-plus-circle'></i> Nuevo Registro</a>

        <table class="table table-bordered table-striped text-center mt-4">
          <thead>
            <tr class="bg-primary text-white">
              <th scope="col">CÃ©dula</th>
              <th scope="col">Propietario</th>
              <th scope="col">Marca del Carro</th>
              <th scope="col">Placa del Carro</th>
              <th scope="col">Hora de Ingreso</th>
              <th scope="col">Hora de Salida</th>
              <th scope="col">Total a Pagar</th>
              <th scope="col">Acciones</th>
            </tr>
          </thead>

          <tbody>
            <% results.forEach((registro) => { %>
            <tr>
              <td><%= registro.cedula%></td>
              <td><%= registro.nombrepropietario %></td>
              <td><%= registro.marcacarro %></td>
              <td><%= registro.placacarro %></td>
              <td><%= registro.horaingreso %></td>
              <td><%= registro.horasalida %></td>
              <td><%= registro.totalpagar %></td>
              <td>
                <a href="/editar/<%= registro.id %>" class="btn btn-outline-info">Editar</a>
                <a href="/borrar" class="btn btn-outline-danger">Eliminar</a>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>


      </div>



      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  </body>
</html>
